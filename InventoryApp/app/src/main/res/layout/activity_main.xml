<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="?android:attr/windowBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/teal_200"
        android:layout_height="200dp"/>
    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome,"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test User"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--TextView
            android:id="@+id/affiliationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company XYZ"
            android:textSize="18sp"
            android:textColor="@color/white" /-->
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/logout"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logout" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Log Out"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/layer1"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:elevation="8dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/all_items"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/all_items_icon"
                android:layout_height="85dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="All Items"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:elevation="8dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/add_item"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/add_item_icon"
                android:layout_height="85dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Add Item"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layer2"
        android:layout_below="@+id/layer1"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:elevation="8dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/edit_item"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/edititem"
                    android:layout_height="85dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Edit Item"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:elevation="8dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/delete_item"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/remove_item"
                    android:layout_height="85dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Delete Item"
                    android:textStyle="bold"

                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layer3"
        android:layout_below="@+id/layer2"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">

        <!--androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:elevation="8dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/myprofile"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/user_icon"
                    android:layout_height="85dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="My Profile"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:elevation="8dp"

            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/notification_btn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/notification_icon"
                    android:layout_height="85dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Notifications"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>
